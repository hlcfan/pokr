<div class="panel panel-default">
  <div class="panel-heading">Personal Information</div>
  <div class="panel-body">
    <%= form_for @user, url: {action: :update}, html: { class: "form", id: "edit-user-password", role: "form" } do |f| %>
      <% if @user.errors.any? %>
        <h5><%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:</h5>

        <ul class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group user--avatar">
        <%= f.label :avatar %>
        <%= image_tag @user.letter_avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <% if guest_user? %>
          <%= f.text_field :email, class: 'form-control' %>
        <% else %>
          <%= f.text_field :email, class: 'form-control', disabled: "disabled" %>
        <% end %>
      </div>
      <div class="actions form-group">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
