<div class="row teams">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Teams</h3>
      </div>
      <div class="panel-body">
        <div class="teams">
          <% if @teams.empty? %>
            <div class="alert alert-info" role="alert">You don't have any teams.</div>
            <a href="/teams/new" class="btn btn-info">Create one!</a>
          <% end %>
          <% @teams.each do |team_name, members| %>
            <h4><%= team_name %></h4>
            <ul class="list-group team">
              <% members.each do |user| %>
                <li class="list-group-item">
                  <% if user.uid == current_user.uid %>
                    <span class="badge">You</span>
                  <% end %>
                  <img src="<%= user.letter_avatar %>" class="img-circle profile-image">
                  <%= user.display_name %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
